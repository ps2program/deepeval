{
    // Place inside .vscode/launch.json
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug pytest: test_litellm_lmstudio_integration",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": false, // Step into site-packages if needed
            "args": [
                "-q", // Quiet output (remove if you prefer verbose)
                "${workspaceFolder}/experimentation/litellm_exp.py" // path to your test file
            ],
            "console": "integratedTerminal", // or "externalTerminal"
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "cwd": "${workspaceFolder}", // project root
            "python": "${command:python.interpreterPath}"
        }
    ]
}